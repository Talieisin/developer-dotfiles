# Mise Configuration
# Global default runtime versions

[tools]
# Node.js - Use LTS by default
node = "lts"  # Automatically uses latest LTS version

# Python - Latest stable
python = "3.13"  # Or specify: "3.13.1"

# Go - Latest stable
go = "latest"

# Rust - Latest stable
rust = "latest"

# Terraform - Managed via tfenv, not mise
# (tfenv provides better Terraform version management)

# Add more tools as needed:
# ruby = "3.3"
# java = "21"
# deno = "latest"

# ============================================================================
# SETTINGS
# ============================================================================

[settings]
# Automatically install missing tools when entering directories
auto_install = true

# Use symlinks instead of copies (faster)
use_symlinks = true

# Show verbose output
verbose = false

# Legacy version files (for compatibility with nvm, pyenv, etc.)
legacy_version_file = true

# ============================================================================
# NOTES
# ============================================================================

# Per-project versions:
# Create .mise.toml in your project directory:
#
# [tools]
# node = "20.11.0"  # This project needs Node 20
# python = "3.11"   # This project needs Python 3.11
#
# mise will automatically switch versions when you cd into the directory!
